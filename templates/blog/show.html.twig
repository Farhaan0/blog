{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.Title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text | raw }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog.date ? blog.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog.author }}</td>
            </tr>
            <tr>
                <th>Afbeelding</th>
                <td><img class="image" src="{{ vich_uploader_asset(blog, 'imageFile') }}"  alt="imageFile"/></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('blog_index') }}">back to list</a>

    {% if app.user %}

    <a  href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
